<div class='row width-xl min-height-s padding-right-s padding-left-s'>
  <div class='col3of4'>
    <div class='row'>
      <h3 class='headline-l'>{{>firstname}} {{>lastname}}</h3>
      <h3 class='headline-s light'>{{>email}}</h3>
    </div>
    {{if delegator_user()}}
    <div class='row margin-top-m'>
      <p class='paragraph-s line-height-s'>{{jed "Responsible"/}}: {{>delegator_user().name()}}</p>
    </div>
    {{/if}}
    {{if address}}
    <div class='row margin-top-m'>
      <p class='paragraph-xs line-height-s'>{{jed "Address"/}}</p>
      <p class='paragraph-s line-height-s'>{{>address}}, {{>zip}} {{>city}}</p>
    </div>
    {{/if}}
    {{if phone}}
    <div class='row margin-top-m'>
      <p class='paragraph-xs line-height-s'>{{jed "Phone"/}}</p>
      <p class='paragraph-s line-height-s'>{{>phone}}</p>
    </div>
    {{/if}}
    {{if badge_id}}
    <div class='row margin-top-m'>
      <p class='paragraph-xs line-height-s'>{{jed "Badge"/}}</p>
      <p class='paragraph-s line-height-s'>{{>badge_id}}</p>
    </div>
    {{/if}}
    {{if is_suspended}}
    <div class='row margin-top-m'>
      <p class="paragraph-xs line-height-s">{{jed "Suspended reason"/}}</p>
      {{for suspended_reason.split('&#10;')}}
        <div class='paragraph-s line-height-s darkred-text'>
          <b>{{>#data}}</b>
        </div>
      {{/for}}
    </div>
    {{/if}}
  </div>
  <div class='col1of4'>
    {{if image_url}}
    <img class='max-size-xxs margin-horziontal-auto' src='{{>image_url/}}' style='max-width: 100px; max-height: 100px'>
    {{/if}}
  </div>
</div>
